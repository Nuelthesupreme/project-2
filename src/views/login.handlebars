<div class="flex h-screen flex-wrap content-center justify-center login-background">
  <div class="w-4/5 md:w-1/2 lg:w-1/2 xl:w-1/3">
    <form class="dark-background-colour shadow-md rounded px-8 pt-6 pb-8 mb-4 orange-border-bottom form-border"
      id="login">
      <h1 class=" block text-white text-2xl font-bold mb-2 text-center orange-border-bottom">Login</h1>
      <div class="mb-4">
        <label class="block text-white text-sm font-bold mb-2" for="username">
          Username
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="username" type="email" placeholder="Enter email">
      </div>
      <div class="mb-6">
        <label class="block text-white text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
          id="password" type="password" placeholder="Enter password">
      </div>
      <div class="flex items-center justify-between">
        <button id="sign-in-button"
          class="orange-background-colour text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit">
          Log in
        </button>
        <a href="/signup"
          class="green-background-colour text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
          Sign Up
        </a>
      </div>
    </form>
  </div>
</div>

<link href="styles/login.css" rel="stylesheet" />
<script type="text/javascript" src="js/login.js"></script>